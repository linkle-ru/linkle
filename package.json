{
  "private": true,
  "scripts": {
    "predev": "vagrant up; pm2 restart 'URL-ShortenerAPI' || pm2 start",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --hot --open 'Google Chrome'",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "start": "node source/server",
    "deploy": "pm2 deploy vps",
    "pretest": "npm run lint",
    "test": "cross-env NODE_ENV=testing mocha --timeout 120000 test/*.test.js",
    "precoverage": "if [ ! -d 'reports' ]; then mkdir 'reports'; else rm -rf 'reports/coverage'; fi",
    "coverage": "cross-env NODE_ENV=testing istanbul cover _mocha -- --timeout 120000 test/*.test.js",
    "postcoverage": "mv ./coverage ./reports/coverage",
    "premutate": "if [ ! -d 'reports' ]; then mkdir 'reports'; else rm -rf 'reports/mutation'; fi",
    "mutate": "cross-env NODE_ENV=testing stryker run",
    "show-coverage": "open ./reports/coverage/lcov-report/index.html",
    "show-msi": "open ./reports/mutation/html/index.html",
    "lint": "eslint --ignore-path .eslintignore --ext .js,.vue source"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.17.2",
    "copy-to-clipboard": "^3.0.8",
    "cors": "^2.8.4",
    "cross-env": "^5.2.0",
    "debug": "^3.0.0",
    "express": "^4.15.4",
    "express-pino-logger": "^4.0.0",
    "express-rate-limit": "^3.3.1",
    "mongoose": "^4.11.8",
    "path": "^0.12.7",
    "pino": "^5.8.1",
    "pino-pretty": "^2.2.3",
    "pm2": "^3.2.2",
    "request": "^2.88.0",
    "require-dir": "^0.3.2",
    "sanitize-html": "^1.19.1",
    "shortid": "^2.2.8",
    "underscore": "^1.8.3",
    "vue": "^2.5.2",
    "vue-yandex-metrika": "^1.7.2",
    "vuetify": "^1.2.10"
  },
  "devDependencies": {
    "autoprefixer": "^9.3.1",
    "babel-core": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-3": "^6.24.1",
    "chai": "^4.1.1",
    "chance": "^1.0.11",
    "codeclimate-test-reporter": "^0.5.0",
    "css-loader": "^0.28.7",
    "eslint": "^5.0.0",
    "eslint-plugin-vue": "^5.0.0-beta.3",
    "file-loader": "^1.1.4",
    "husky": "^1.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.5.0",
    "mockgoose": "^7.3.3",
    "postcss-import": "^12.0.1",
    "postcss-url": "^8.0.0",
    "stryker": "^0.29.2",
    "stryker-api": "^0.21.1",
    "stryker-html-reporter": "^0.16.2",
    "stryker-javascript-mutator": "^0.10.0",
    "stryker-mocha-framework": "^0.12.2",
    "stryker-mocha-runner": "^0.14.2",
    "supertest": "^3.0.0",
    "vue-loader": "^13.3.0",
    "vue-template-compiler": "^2.5.2",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.9.1"
  },
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
